              //     {label:'Read the article',link:"http://tympanus.net/codrops/elastic-progress/"}
              //   ]

              // include work

          footer
            h2#contact Contact
            .text-center
              .Contact-heading You can drop me a line at
              a.Email.Footer-link <strong>lucasbbebber</strong> at <strong>gmail</strong> dot com
              .Contact-heading You can find me on
              .Social
                a.Footer-link.Social-link(href='http://codepen.io/lbebber') <strong>codepen</strong>.io/<strong>lbebber</strong>
                br
                a.Footer-link.Social-link(href='http://twitter.com/lucasbebber') <strong>twitter</strong>.com/<strong>lucasbebber</strong>
                br
                a.Footer-link.Social-link(href='http://dribbble.com/lbebber') <strong>dribbble</strong>.com/<strong>lbebber</strong>

      .Scene--bottom
        canvas.Scene-mountains.Scene-mountains--bottom
