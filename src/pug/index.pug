        .Scene
          .Scene-sky(role='presentation')
          canvas.Scene-stars(role='presentation')
          canvas.Scene-mountains(data-stop-on-scroll='true',role='presentation')
        h1.Title
          span.Title-big.Title-Center(aria-label='Lucas Bebber') 
            span.Title-Center-left(aria-hidden='true') Lucas 
            span.Title-Center-right(aria-hidden='true') Bebber
          span.Title-small.Title-Center(aria-label='Creative Developer')
            span.Title-Center-left(aria-hidden='true') Creative 
            span.Title-Center-right(aria-hidden='true') Developer
          div.Title-separator.js-Lazyload(role='presentation',data-image='img/separator-green.svg')
      main
        .container
          section
            h2#about About
            p.heading Developer working on creating rich, interesting, and at the same time performant and usable experiences for the web.
            p Focusing on user interfaces, performance, and animation. Also works with back-end development, design, and illustration.
            p Working at <a href='http://gardenestudio.com.br'>Garden Estúdio</a>. Based in Rio Grande do Sul - Brazil.
          section
            h2#work Work
            div.Works
              - var title='Rain Effect'
              - var subtitle='Effect/Codrops'
              - var description='Relatively lightweight realistic raindrops-on-a-window effect, with WebGL.'
              - var image='img/rain.jpg'
              - var video='rain'
              -
                var links=[
                  {label:'View demo',link:'http://tympanus.net/Development/RainEffect/'},
                  {label:'Read the article',link:'http://tympanus.net/codrops/rain-water-effect-experiments/'}
                ]
              include work

              - var title='Heat Haze Effect'
              - var subtitle='Effect/Codrops'
              - var description='Relatively lightweight realistic heat haze effect, with WebGL.<br>With minor tweaks, it can also be used to simulate a water effect.'
              - var link='http://tympanus.net/codrops/2016/05/03/animated-heat-distortion-effects-webgl/'
              - var label='See the project'
              - var image='img/haze.jpg'
              - var video='heat'
              -
                var links=[
                  {label:'View demo',link:'http://tympanus.net/Tutorials/HeatDistortionEffect/index3.html'},
                  {label:'Read the article',link:"http://tympanus.net/codrops/animated-heat-distortion-effects-webgl/"}
                ]
              include work

              - var title='Storytelling Map'
              - var subtitle='Storytelling/Codrops'
              - var description='Animated map for interactive storytelling.'
              - var image='img/map.png'
              - var video='scrollytelling'
              -
                var links=[
                  {label:'View demo',link:'http://tympanus.net/Development/StorytellingMap/'},
                  {label:'Read the article',link:"http://tympanus.net/codrops/animated-map-path-for-interactive-storytelling/"}
                ]
              include work

              - var title='Elastic Progress'
              - var subtitle='Interface Animation/Codrops'
              - var description='SVG animation for a playful download button.'
              - var image='img/elastic.png'
              - var video='elastic'
              -
                var links=[
                  {label:'View demo',link:'http://tympanus.net/Development/ElasticProgress/'},
                  {label:'Read the article',link:"http://tympanus.net/codrops/elastic-progress/"}
                ]

              include work

              // - var title='Garden Estúdio'
