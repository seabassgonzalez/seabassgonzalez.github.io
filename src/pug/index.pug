  body
    .ScrollWrapper
      header.Header.js-HasVH(data-vh='0.75')
        nav
          a.Nav-link(href='#about')
            span About
          a.Nav-link(href='#work') 
            span Work
          a.Nav-link(href='#contact') 
            span Contact
